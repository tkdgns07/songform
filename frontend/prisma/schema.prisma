datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model WakeupCalendar {
  id      Int    @id @default(autoincrement())
  year    Int
  month   Int
  day     Int
  student String 
  music_url    String  @default("None")
}

model LaborCalendar {
  id      Int    @id @default(autoincrement())
  year    Int
  month   Int
  day     Int
  student String 
  weekend Boolean?
  music_url    String  @default("None")
}

model Students {
  id        Int    @id @unique
  name      String
  grade     Int
  birthday  String
}